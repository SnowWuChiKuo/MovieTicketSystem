@model ServerSide.Models.ViewModels.GenreVm

@{
    ViewData["Title"] = "新增電影分類";
}


<div class="container-fluid">
    <h1 class="fw-bolder mb-3 mx-4">新增電影分類</h1>
    <div class="card m-4">
        <div class="card-body">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DisplayOrder" class="form-label"></label>
                        <input asp-for="DisplayOrder" class="form-control">
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <a asp-action="Index" class="btn btn-secondary me-4">回到分類清單</a>
                        <input type="submit" value="確認新增" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
