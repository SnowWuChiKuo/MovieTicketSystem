@model IEnumerable<ServerSide.Models.ViewModels.MovieVm>

@{
    ViewData["Title"] = "電影資料維護";
}

<div class="container-fluid">

    <h1 class="fw-bolder mb-3">電影資料維護</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr style="background-color:skyblue">
                            <th>@Html.DisplayNameFor(model => model.GenreId)</th>
                            <th>@Html.DisplayNameFor(model => model.RatingId)</th>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Director)</th>
                            <th>@Html.DisplayNameFor(model => model.Cast)</th>
                            <th>@Html.DisplayNameFor(model => model.RunTime)</th>
                            <th>@Html.DisplayNameFor(model => model.ReleaseDate)</th>
                            <th>@Html.DisplayNameFor(model => model.PosterUrl)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            <th>@Html.DisplayNameFor(model => model.Updated)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.GenreId)</td>
                                <td>@Html.DisplayFor(modelItem => item.RatingId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.Director)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cast)</td>
                                <td>@Html.DisplayFor(modelItem => item.RunTime)分鐘</td>
                                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.PosterUrl)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                <td>@Html.DisplayFor(modelItem => item.Updated)</td>
                                <td nowrap>
                                    <a asp-action="Edit" asp-route-id="@item.Id">編輯</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">詳細</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">刪除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section styles
{
    <!-- Custom styles for this page -->
    <link href="~/js/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

@section scripts
{
    <!-- Page level plugins -->
    <script src="~/js/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/js/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/js/demo/datatables-demo.js"></script>
}


