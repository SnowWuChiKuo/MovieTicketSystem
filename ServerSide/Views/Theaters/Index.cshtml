@model IEnumerable<ServerSide.Models.ViewModels.TheaterVm>

@{
    ViewData["Title"] = "影廳清單";
}
<div class="container-fluid">
    <h1 class="fw-bolder mb-3">影廳清單</h1>
    <div class="d-flex mb-3 justify-content-between">
        <!-- 搜尋表單 -->
        <form asp-action="Search" method="get" class="flex-grow-1 me-3">
            <div class="row mb-3 justify-content-start">
                <div class="col-2">
                    <input type="text" name="name" placeholder="影廳名稱" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-search"></i> &nbsp 搜尋
                </button>
            </div>
        </form>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0" id="myTable">
                    <thead>
                        <tr style="background-color:skyblue">
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalSeats)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        //在table row加上onclick事件、改滑鼠懸停狀態，點擊後觸發JavaScript函數，跳轉到Edit
                            <tr onclick="navigateToEdit('@item.Id')" style="cursor: pointer;">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalSeats)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section Styles
{
    <!-- Custom styles for this page -->
    <link href="~/js/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
}

@section Scripts
{
    <!-- jQuery -->
    <script src="~/js/vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/js/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/js/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/js/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/js/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- SBAdmin scripts -->
    <script src="~/js/js/sb-admin-2.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/js/demo/datatables-demo.js"></script>
    <script>
        //初始化DataTable套件 設置屬性
        $(document).ready(function () {
            $('#myTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "language":
                {
                    "lengthMenu": "每頁顯示筆數 _MENU_ ",
                    "zeroRecords": "沒有找到對應的資料",
                    "info": "顯示第 _START_ 到 _END_ 筆，共 _TOTAL_ 筆",
                    "infoEmpty": "顯示第 0 到 0 筆，共 0 筆",
                    "infoFiltered": "(從 _MAX_ 筆資料中過濾)",
                    "paginate":
                    {
                        "previous": "上一頁",
                        "next": "下一頁"
                    }
                }
            });

            $('#myTable_filter').hide();
        });
        //點擊表格Row跳轉到Edit頁面
        function navigateToEdit(id) {
            window.location.href = '/Theaters/Edit/' + id;
        }
    </script>
}
