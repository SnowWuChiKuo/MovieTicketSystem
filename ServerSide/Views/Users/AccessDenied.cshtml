@section Scripts {
    <script>
        Swal.fire({
            icon: 'error',
            title: '訪問遭拒',
            text: '您沒有權限訪問此頁面。',
            confirmButtonText: '確定',
            confirmButtonColor: '#dc3545',
            allowOutsideClick: false,
            allowEscapeKey: false
        }).then((result) => {
           if (result.isConfirmed) {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        });
    </script>
}