@model ServerSide.Models.ViewModels.TicketSeatVm

@{
    ViewData["Title"] = "新增票務座位資料";
}
<div class="container">
    <h1 class="fw-bolder">新增票務座位資料</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TicketId" class="form-label"></label>
                    <input asp-for="TicketId" class="form-control form-control-sm" />
                    <span asp-validation-for="TicketId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SeatId" class="form-label"></label>
                    <input asp-for="SeatId" class="form-control form-control-sm" />
                    <span asp-validation-for="SeatId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="新增" class="btn btn-primary btn-sm" />
                    <a asp-action="Index" class="btn btn-sm btn-secondary">回清單頁</a>
                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
