@model ClientSide.Models.ViewModels.LoginVm

@{
    ViewBag.Title = "登入";
}

<style>
    /* 主標題樣式 */
    .login-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--accent-color);
        margin-bottom: 2rem;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        text-align: center;
    }

    /* 表單卡片樣式 */
    .login-card {
        border: 1px solid var(--border-color);
        border-radius: 12px;
        background: var(--secondary-bg);
        padding: 2rem;
        margin: 20px 0;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 0 auto;
    }

    /* 標籤樣式 */
    .form-label {
        font-weight: 500;
        color: var(--accent-color);
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
    }

    /* 輸入框樣式 */
    .form-control {
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        border: 1px solid var(--border-color);
        border-radius: 6px;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        color: var(--text-primary);
        background-color: var(--secondary-bg);
    }

    .form-control:focus {
        border-color: var(--accent-color);
        box-shadow: 0 0 0 0.2rem rgba(224, 169, 109, 0.25);
    }

    /* 按鈕樣式 */
    .btn {
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        transition: all 0.3s ease;
        font-weight: 500;
        padding: 0.5rem 1.5rem;
        border-radius: 6px;
        font-size: 1rem;
    }

    /* 登入按鈕 */
    .btn-primary {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: white;
    }

    .btn-primary:hover {
        background-color: #c89b69;
        border-color: #c89b69;
        transform: translateY(-2px);
    }

    /* 忘記密碼按鈕 */
    .btn-link {
        color: var(--accent-color);
        text-decoration: none;
        padding: 0;
    }

    .btn-link:hover {
        color: #c89b69;
        text-decoration: underline;
    }

    /* 驗證訊息 */
    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="container" style="margin-bottom:200px; margin-top:90px;">
    <div class="login-card">
        <h2 class="login-title">登入</h2>

        @using (Html.BeginForm("Login", "Members", FormMethod.Post, new { @id = "loginForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "請輸入帳號", id = "account" } })
                    @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-sm", placeholder = "請輸入密碼", id = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <input type="submit" value="登入" class="btn btn-primary btn-sm" />
                    @Html.ActionLink("忘記密碼", "ForgotPassword", null, new { @class = "btn btn-link" })
                </div>
            </div>
        }
    </div>
</div>
<div class="d-flex justify-content-center">
    <div class="me-2">
        <button class="btn btn-sm btn-primary" id="test1">測試帳號1</button>
    </div>
    <div class="me-2">
        <button class="btn btn-sm btn-primary" id="test2">測試帳號2</button>
    </div>
    <div class="me-2">
        <button class="btn btn-sm btn-primary" id="test3">測試帳號3</button>
    </div>
    <div>
        <button class="btn btn-sm btn-primary" id="test4">測試帳號4</button>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(document).ready(function () {
        var errorMessage = '@Html.Raw(TempData["ErrorMessage"])';
        if (errorMessage) {
            Swal.fire({
                icon: 'error',
                title: '登入失敗',
                html: errorMessage
            });
        }

        $('#test2').click(function () {
            $('#account').val('test18');
            $('#password').val('123456');
        })

        $('#test3').click(function () {
            $('#account').val('test19');
            $('#password').val('123456');
        })

        $('#test4').click(function () {
            $('#account').val('test20');
            $('#password').val('123456');
        })
    });

    document.getElementById('test1').addEventListener('click', function () {
        document.getElementById('account').value = 'test17';
        document.getElementById('password').value = '123456';
    })

    
</script>
