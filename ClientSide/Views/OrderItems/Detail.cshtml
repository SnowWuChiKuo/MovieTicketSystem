@model ClientSide.Models.ViewModels.OrderItemDetailVm
@{
    ViewBag.Title = "Detail";
}
<style>
    .ticket-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin: 2rem auto;
        max-width: 800px;
    }

    .ticket-header {
        border-bottom: 2px solid #f0f0f0;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
    }

    .ticket-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        margin-bottom: 1.5rem;
    }

    .info-label {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .info-value {
        color: #333;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .ticket-footer {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 2px solid #f0f0f0;
    }

    .custom-btn {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .custom-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
</style>

<div class="ticket-card">
    <div class="ticket-header">
        <h2 class="fw-bolder text-center">電影票留存詳情</h2>
    </div>

    <div class="ticket-info">
        <div class="info-item">
            <div class="info-label">@Html.DisplayNameFor(model => model.TheaterName)</div>
            <div class="info-value">@Html.DisplayFor(model => model.TheaterName)</div>
        </div>

        <div class="info-item">
            <div class="info-label">@Html.DisplayNameFor(model => model.MovieTitle)</div>
            <div class="info-value">@Html.DisplayFor(model => model.MovieTitle)</div>
        </div>

        <div class="info-item">
            <div class="info-label">@Html.DisplayNameFor(model => model.MovieTime)</div>
            <div class="info-value">@Html.DisplayFor(model => model.MovieTime)</div>
        </div>

        <div class="info-item">
            <div class="info-label">@Html.DisplayNameFor(model => model.SeatName)</div>
            <div class="info-value">@Html.DisplayFor(model => model.SeatName)</div>
        </div>

        <div class="info-item">
            <div class="info-label">@Html.DisplayNameFor(model => model.Qty)</div>
            <div class="info-value">@Html.DisplayFor(model => model.Qty)</div>
        </div>

        <div class="info-item">
            <div class="info-label">@Html.DisplayNameFor(model => model.Price)</div>
            <div class="info-value">@Html.DisplayFor(model => model.Price)</div>
        </div>

        <div class="info-item">
            <div class="info-label">@Html.DisplayNameFor(model => model.SubTotal)</div>
            <div class="info-value">@Html.DisplayFor(model => model.SubTotal)</div>
        </div>
    </div>

    <div class="ticket-footer text-center">
        <a href="~/Orders/Index" class="custom-btn btn btn-outline-primary">返回電影票列表</a>
    </div>
</div>