@model ClientSide.Models.ViewModels.CartItemDetailVm

@{
    ViewBag.Title = "Detail";
}
<div class="container mt-5" style="margin-bottom:200px; margin-top:100px">
    <h2 class="text-center  ">訂票細項</h2>
    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TheaterName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TheaterName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MovieTitle)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MovieTitle)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MovieTime)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MovieTime)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.SeatName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SeatName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Qty)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Qty)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.SubTotal)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SubTotal)
                </dd>
            </dl>
        </div>
    </div>
    <div class="text-center mt-4">
        <a href="~/Carts/Index" class="btn btn-outline-primary">回訂票夾</a>
    </div>
</div>