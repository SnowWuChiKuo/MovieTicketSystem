@model ClientSide.Models.ViewModels.CartItemDetailVm

@{
    ViewBag.Title = "映悅 CineMoment - 訂票細項";
}

<style>
    /* 主標題樣式 */
    .detail-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--accent-color);
        margin-bottom: 2rem;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        text-align: center;
    }

    /* 詳細資訊卡片樣式 */
    .detail-card {
        border: 1px solid var(--border-color);
        border-radius: 12px;
        background: var(--secondary-bg);
        padding: 2rem;
        margin: 20px 0;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    /* 資訊列樣式 */
    .info-row {
        display: flex;
        margin-bottom: 1.5rem;
        align-items: center;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
    }

    .info-label {
        width: 120px;
        font-weight: 500;
        color: var(--accent-color);
        font-size: 1.1rem;
    }

    .info-content {
        flex: 1;
        color: var(--text-primary);
        font-size: 1.1rem;
    }

    /* 按鈕樣式 */
    .btn {
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        transition: all 0.3s ease;
        font-weight: 500;
        padding: 0.5rem 1.5rem;
        border-radius: 6px;
        margin: 0 0.5rem;
    }

    .btn-back {
        background-color: var(--secondary-bg);
        border: 1px solid var(--footer-link);
        color: var(--text-primary);
    }

    .btn-back:hover {
        border-color: var(--accent-color);
        color: var(--accent-color);
        transform: translateY(-2px);
    }

    /* 按鈕容器樣式 */
    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
        gap: 1rem;
    }

</style>

<div class="container" style="margin-top: 120px; margin-bottom: 80px;">
    <h1 class="detail-title">訂票細項</h1>

    <div class="detail-card">
        <div class="info-row">
            <div class="info-label">影廳</div>
            <div class="info-content">@Model.TheaterName</div>
        </div>
        <div class="info-row">
            <div class="info-label">電影名稱</div>
            <div class="info-content">@Model.MovieTitle</div>
        </div>
        <div class="info-row">
            <div class="info-label">場次時間</div>
            <div class="info-content">@Model.MovieTime</div>
        </div>
        <div class="info-row">
            <div class="info-label">座位</div>
            <div class="info-content">@Model.SeatName</div>
        </div>
        <div class="info-row">
            <div class="info-label">數量</div>
            <div class="info-content">@Model.Qty</div>
        </div>
        <div class="info-row">
            <div class="info-label">單價</div>
            <div class="info-content">@Model.Price 元</div>
        </div>
        <div class="info-row">
            <div class="info-label">小計</div>
            <div class="info-content">@Model.SubTotal 元</div>
        </div>

        <div class="button-container">
            <a href="~/Carts/Index" class="btn btn-back">回訂票夾</a>
        </div>
    </div>
</div>