@model List<ClientSide.Models.ViewModels.OrderVm>

@{
    ViewBag.Title = "訂單完成";
}

<style>
    /* 主標題樣式 */
    .order-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--accent-color);
        margin-bottom: 2rem;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        text-align: center;
    }

    /* 訂單容器 */
    .order-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
    }

    /* 訂單卡片 */
    .order-card {
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        background: var(--secondary-bg);
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
    }

    /* 電影海報 */
    .movie-poster {
        margin-right: 1.5rem;
    }

    .movie-poster img {
        width: 100px;
        height: 140px;
        object-fit: cover;
        border-radius: 8px;
    }

    /* 電影資訊 */
    .movie-info {
        flex: 1;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
    }

    .movie-info p {
        margin: 0.5rem 0;
        color: var(--text-primary);
        font-size: 1.1rem;
    }

    .movie-info b {
        color: var(--accent-color);
        margin-right: 0.5rem;
    }

    /* 按鈕樣式 */
    .btn-ticket {
        background-color: var(--accent-color);
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 6px;
        transition: all 0.3s ease;
        text-decoration: none;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
    }

    .btn-ticket:hover {
        background-color: #c89b69;
        transform: translateY(-2px);
    }

    .btn-home {
        background-color: var(--secondary-bg);
        border: 1px solid var(--accent-color);
        color: var(--accent-color);
        padding: 0.75rem 2rem;
        border-radius: 6px;
        transition: all 0.3s ease;
        margin-top: 3rem;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
    }

    .btn-home:hover {
        background-color: var(--accent-color);
        color: white;
        transform: translateY(-2px);
    }

    /* 空訂單提示 */
    .empty-order {
        text-align: center;
        padding: 4rem 2rem;
        color: var(--text-secondary);
        font-size: 1.5rem;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
    }
</style>

<div class="container" style="margin-bottom: 200px; margin-top: 100px;">
    <div class="order-container">
        <h2 class="order-title">訂單完成</h2>
        
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                foreach (var item in order.OrderItems)
                {
                    <div class="order-card">
                        <div class="movie-poster">
                            <img src="~/MoviePosters/@item.ImgPath" alt="@item.MovieTitle" />
                        </div>
                        <div class="movie-info">
                            <p><b>電影:</b> @item.MovieTitle</p>
                            <p><b>時間:</b> @item.MovieTime</p>
                        </div>
                        <div>
                            <a href="~/OrderItems/Detail/@item.Id" class="btn-ticket">進入票卷</a>
                        </div>
                    </div>
                }
            }
            <div class="text-center mt-5">
                <a href="~/Movies/Index" class="btn-home">回電影首頁</a>
            </div>
        }
        else
        {
            <div class="empty-order">
                <h1>還未購買任何一張電影票!</h1>
            </div>
        }
    </div>
</div>