@model List<ClientSide.Models.ViewModels.OrderVm>


@{
    ViewBag.Title = "訂單完成電影票";
}

<style>

    /* 主標題樣式 */
    .cart-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--accent-color);
        margin-bottom: 2rem;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        text-align: center;
    }

    /* 主卡片樣式 */
    .card1 {
        margin-top: 40px;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 20px;
        background: var(--secondary-bg);
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    /* 內部卡片樣式 */
    .card2 {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 15px;
        display: flex;
        align-items: center;
        margin: 10px;
        justify-content: space-between;
        background: var(--secondary-bg);
    }

        .card2 img {
            max-width: 100px;
            max-height: 100px;
            border-radius: 4px;
        }

    /* 電影資訊樣式 */
    .movie-info {
        margin: 0 10px;
        display: flex;
        text-align: center;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
    }

        .movie-info p {
            margin: 0 10px;
            white-space: nowrap;
            color: var(--text-primary);
            font-size: 1.1rem;
        }

        .movie-info b {
            color: var(--accent-color);
        }

    /* 按鈕樣式 */
    .btn {
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        transition: all 0.3s ease;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 6px;
    }

    .btn-outline-primary {
        border-color: var(--accent-color);
        color: var(--accent-color);
    }

        .btn-outline-primary:hover {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
            color: white;
            transform: translateY(-2px);
        }

    .btn-danger {
        background-color: var(--secondary-bg);
        border: 1px solid #dc3545;
        color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
            transform: translateY(-2px);
        }

    .btn-success {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: white;
        padding: 0.5rem 2rem;
    }

        .btn-success:hover {
            background-color: #c89b69;
            border-color: #c89b69;
            color: white;
            transform: translateY(-2px);
        }

    /* 空購物車提示樣式 */
    .empty-cart {
        text-align: center;
        padding: 3rem;
        color: var(--text-secondary);
        font-size: 1.5rem;
        font-weight: 500;
    }
</style>


<div class="container" style="margin-bottom: 200px; margin-top: 100px; ">

    <div style="display: flex; flex: 1;">
        <div style="flex: 1; padding: 20px;">
            <h2 style="text-align: center; margin-bottom: 20px;" class="fw-bolder">訂單完成電影票</h2>
            @{
                if (Model != null && Model.Any())
                {
                    foreach (var order in Model)
                    {
                        foreach (var item in order.OrderItems)
                        {
                            <div style="border: 1px solid #ddd; padding: 10px; margin-bottom: 10px; display: flex; align-items: center;">
                                <div style="margin-right: 10px;">
                                    <img src="~/MoviePosters/@item.ImgPath" alt="Movie Image" style="max-width: 100px; max-height: 100px;" />
                                </div>
                                <div style="flex: 1;">
                                    <p><b>電影:</b> @item.MovieTitle</p>
                                    <p><b>時間:</b> @item.MovieTime</p>
                                </div>
                                <div style="margin-left: 10px;">
                                    <a href="~/OrderItems/Detail/@item.Id" class="btn btn-sm btn-outline-primary">>進入票卷</a>
                                </div>
                            </div>
                        }
                    }
                    <div class="text-center " style="margin-top: 80px">
                        <a href="~/Movies/Index" class="btn btn-danger ">回電影首頁</a>
                    </div>
                }
                else
                {
                    <h1 style="text-align: center; margin-top: 100px;">還未購買任何一張電影票!</h1>
                }
            }
        </div>
    </div>
</div>