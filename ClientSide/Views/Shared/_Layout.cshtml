<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 電影訂票網</title>

    <!-- 小符號引用、框架 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link href="https://unpkg.com/element-plus@2.2.30/dist/index.css" rel="stylesheet">

    <!-- 字體 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+TC:wght@200..900&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&family=Noto+Sans+TC:wght@100..900&family=Noto+Serif+TC:wght@200..900&family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">

    <!-- 自定義 CSS -->
    <link href="~/Content/Shared/_Variables.css" rel="stylesheet">
    <link href="~/Content/Shared/_NavbarStyles.css" rel="stylesheet">
    <link href="~/Content/Shared/_FooterStyles.css" rel="stylesheet">
    <link href="~/Content/Shared/_Layout.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <!-- 確保這些引用存在且順序正確 -->
    <link href="https://unpkg.com/element-plus/dist/index.css" rel="stylesheet">
    <script src="https://unpkg.com/vue@3"></script>
    <script src="https://unpkg.com/element-plus"></script>
</head>
<body>
    <div class="layout-container">
        @Html.Partial("_NavbarPartial")
        
        <main class="main-content">
            @RenderBody()
        </main>

        @Html.Partial("_FooterPartial")
    </div>

    <!-- 核心框架 - 注意引用順序 -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/vue@3.3.4/dist/vue.global.js"></script>
    <script src="https://unpkg.com/element-plus@2.2.30/dist/index.full.js"></script>

    <!-- Sweet Alert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- 自定義腳本 -->
    <script src="~/Scripts/Shared/navbar.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
