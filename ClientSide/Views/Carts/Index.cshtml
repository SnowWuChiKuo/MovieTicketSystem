@model ClientSide.Models.ViewModels.CartVm

@{
    ViewBag.Title = "訂票夾";
}

<style>

    /* 主標題樣式 */
    .cart-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: var(--accent-color);
        margin-bottom: 2rem;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        text-align: center;
    }

    /* 主卡片樣式 */
    .card1 {
        margin-top: 40px;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 20px;
        background: var(--secondary-bg);
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    /* 內部卡片樣式 */
    .card2 {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 15px;
        display: flex;
        align-items: center;
        margin: 10px;
        justify-content: space-between;
        background: var(--secondary-bg);
    }

    .card2 img {
        max-width: 100px;
        max-height: 100px;
        border-radius: 4px;
    }

    /* 電影資訊樣式 */
    .movie-info {
        margin: 0 10px;
        display: flex;
        text-align: center;
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
    }

    .movie-info p {
        margin: 0 10px;
        white-space: nowrap;
        color: var(--text-primary);
        font-size: 1.1rem;
    }

    .movie-info b {
        color: var(--accent-color);
    }

    /* 按鈕樣式 */
    .btn {
        font-family: 'Lexend Deca', 'Noto Sans TC', sans-serif !important;
        transition: all 0.3s ease;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 6px;
    }

    .btn-outline-primary {
        border-color: var(--accent-color);
        color: var(--accent-color);
    }

    .btn-outline-primary:hover {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: white;
        transform: translateY(-2px);
    }

    .btn-danger {
        background-color: var(--secondary-bg);
        border: 1px solid #dc3545;
        color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        transform: translateY(-2px);
    }

    .btn-success {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        color: white;
        padding: 0.5rem 2rem;
    }

    .btn-success:hover {
        background-color: #c89b69;
        border-color: #c89b69;
        color: white;
        transform: translateY(-2px);
    }

    /* 空購物車提示樣式 */
    .empty-cart {
        text-align: center;
        padding: 3rem;
        color: var(--text-secondary);
        font-size: 1.5rem;
        font-weight: 500;
    }
</style>

<div class="container"  style="margin-bottom: 200px; margin-top: 100px; ">
    <div style="display: flex; flex: 1;">
        <div style="flex: 1; padding: 20px;">
            <h2 class="cart-title">訂票夾</h2>
            @{
                if (Model != null && Model.CartItems != null && Model.CartItems.Any())
                {
                    <div class="card1">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="card2">
                                <div style="margin-right: 10px;">
                                    <img src="~/MoviePosters/@item.ImgPath" alt="Movie Image" />
                                </div>
                                <div class="movie-info">
                                    <p style="margin-right:50px"><b>電影:</b> @item.MovieTitle </p>
                                    <p><b>時間:</b> @item.MovieTime</p>
                                </div>
                                <div class="right-items">
                                    <a href="~/CartItems/Detail/@item.Id" class="btn btn-outline-primary">>進入票卷</a>
                                    <a class="btn btn-danger ms-3" href="~/CartItems/DeleteCartItem?id=@item.Id">刪除</a>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center" style="margin-top: 80px">
                        <a class="btn btn-success" href="~/Carts/Checkout?cartId=@Model.Id">前往結帳</a>
                    </div>
                }
                else
                {
                    <div class="card1" style="align-items: center; height:500px;">
                        <h1 class="empty-cart" asp-action="Checkout">訂票夾是空的</h1>
                    </div>
                }
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
       @if (TempData["ErrorMessage"] != null)
        {
            @:Swal.fire({
            @:  icon: 'error',
            @:  title: '錯誤!',
            @:  text: '@TempData["ErrorMessage"]',
            @:});
            @:Console.log('@TempData["ErrorMessage"]');
        }
    });
</script>

